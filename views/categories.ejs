<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width,initial-scale=1.0">
        <title>Categories</title>
    </head>
    <body>
        <header>
            <h1>Categories</h1>
        </header>
        <main>
            <section class="categories_list">
                <table>
                    <thead>
                        <tr>Categories</tr>
                    </thead>
                    <tbody>
                        <% categories.forEach(category => { %>
                            <td><%= category.category %></td>
                       <% }) %>
                    </tbody>
                </table>
            </section>
            <div class="controls">
                <a href="/categories/form/create">
                    <button>Add</button>
                </a>
                <a href="/categories/delete/:categoryId">
                    <button>Delete</button>
                </a>
            </div>
        </main>
        <%- include('partials/footer', {year: year}); %>
    </body>
</html>